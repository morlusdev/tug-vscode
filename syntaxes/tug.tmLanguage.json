{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tug",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#function"
		},
		{
			"include": "#none"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.tug",
				"match": "\\b(if|else|loop|skip|break|func|ret)\\b"
			}]
		},
		"function": {
			"patterns": [{
				"begin": "([A-Za-z_][A-Za-z0-9_]*)\\s*(\\()",
				"beginCaptures": {
					"1": {
						"name": "entity.name.function.tug"
					},
					"2": {
						"name": "punctuation.brackets.round.tug"
					}
				},
				"end": "\\)",
				"endCaptures": {
					"0": {
						"name": "punctuation.brackets.round.tug"
					}
				}
			}]
		},
		"none": {
			"patterns": [{
				"name": "constant.language.tug",
				"match": "\\b(none)\\b"
			}]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line.number-sign",
				"match": "#.*"
			}]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.tug",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.tug",
							"match": "\\\\."
						}
					]
				},{
					"name": "string.quoted.single.tug",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.tug",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
				"name": "constant.numeric.integer.tug",
				"match": "\\d+"
				},
				{
				"name": "constant.numeric.decimal.tug",
				"match": "\\d+\\.\\d+"
				}
			]
		}
	},
	"scopeName": "source.tug"
}